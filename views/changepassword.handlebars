<form id="change-password-form" method="POST" action="/user/changepassword"> 
    <label for="oldPasswordInput">Current Password:</label> 
    <input type="password" id="oldPasswordInput" name="oldPasswordInput" autocomplete="given-password">
    <br /> 
    
    <label for="newPasswordInput">New Password:</label> 
    <input type="password" id="newPasswordInput" name="newPasswordInput" autocomplete="given-password"> 
    <br />
    <label for="submitCP">Submit:</label> 
    <button type="submit" id="submitCP">Submit</button> 
</form> 
