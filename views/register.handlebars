{{!--

registration handelbars

--}}
<h1>{{title}}</h1>
<div class="form-group hidden" id="error-container">
        <div class="text-goes-here">
        </div>
</div>
{{#if error}} 
<div class="error">{{msg}}</div> 
{{/if}} 
<form id="registration-form" method="POST" action="/user/register"> 
    <label for="firstNameInput">First Name</label> 
    <input type="text" name="firstNameInput" id="firstNameInput" > <br />
    <label for="lastNameInput">Last Name</label> 
    <input type="text" name="lastNameInput" id="lastNameInput" > <br />
    <label for="emailAddressInput">Email Address</label> 
    <input type="email" name="emailAddressInput" id="emailAddressInput" autocomplete="given-email" > <br />
    <label for="passwordInput">Password</label> 
    <input type="password" name="passwordInput" id="passwordInput" autocomplete="given-password"> <br />
    <label for="confirmPasswordInput">Confirm Password</label> 
    <input type="password" name="confirmPasswordInput" id="confirmPasswordInput" autocomplete="given-password"> <br />
    <button type="submit">Register</button> 
</form> 
<br />
<!-- Loading element -->
<div id="loading-spinner" class="hidden">
  <div class="spinner"></div>
</div>
<p><a href="/user/login"><strong>Already have an account? Click here to log-in</strong></a></p>
